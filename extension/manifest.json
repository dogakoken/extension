{
  "name": "Fake News Detector",
  "description": "Fake news detector and word counter for selected text",
  "version": "1.0",
  "manifest_version": 2,

  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "http://localhost:5000/",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
